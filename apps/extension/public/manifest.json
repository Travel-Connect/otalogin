{
  "manifest_version": 3,
  "name": "OTAログイン支援",
  "version": "0.1.0",
  "description": "OTA自動ログイン支援ツール Chrome拡張",
  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://hotel.travel.rakuten.co.jp/*",
    "https://www.jalan.net/*",
    "https://asp.hotel-story.ne.jp/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://hotel.travel.rakuten.co.jp/*",
        "https://www.jalan.net/*",
        "https://asp.hotel-story.ne.jp/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "externally_connectable": {
    "matches": [
      "http://localhost:3000/*",
      "https://otalogin.vercel.app/*"
    ]
  }
}
